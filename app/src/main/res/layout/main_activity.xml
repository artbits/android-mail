<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="发送邮件"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/pop3_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="使用POP3协议接收邮件"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/pop3_rec_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="使用POP3协议获取全部邮件数量"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/imap_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="使用IMAP协议接收邮件"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/imap_rec_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="使用IMAP协议获取全部邮件数量"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/imap_rec_unread_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="使用IMAP协议获取未读邮件数量"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/imap_rec_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="使用IMAP协议全部邮件的UID"
        tools:ignore="HardcodedText" />

</LinearLayout>